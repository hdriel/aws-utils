{
    "name": "@hdriel/aws-utils",
    "version": "1.3.0",
    "description": "Simplified AWS SDK (v3) utilities for S3 (upload, download, streaming) with TypeScript support",
    "author": "Hadriel Benjo (https://github.com/hdriel)",
    "type": "module",
    "types": "dist/index.d.ts",
    "main": "./dist/index.js",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "bugs": {
        "url": "https://github.com/hdriel/aws-utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hdriel/aws-utils.git"
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist",
        "build:watch": "tsc --watch",
        "format": "prettier --write .",
        "clean": "rimraf ./dist",
        "yalc:publish": "pnpm run build && yalc publish --private --push && cd demo && pnpm add @hdriel/aws-utils && cd ../demo && npm run yalc:attach",
        "docker:localstack:restart": "cross-env NODE_ENV=localhost && docker-compose -f docker-compose.localstack.yml --env-file .env.local up -d --build",
        "docker:localstack:down": "docker-compose -f docker-compose.localstack.yml down"
    },
    "dependencies": {
        "@aws-sdk/client-iam": "3.899.0",
        "@aws-sdk/client-lambda": "3.899.0",
        "@aws-sdk/client-s3": "3.899.0",
        "@aws-sdk/client-ses": "3.899.0",
        "@aws-sdk/client-sns": "3.899.0",
        "@aws-sdk/lib-storage": "3.900.0",
        "@aws-sdk/s3-request-presigner": "3.899.0",
        "@smithy/node-http-handler": "4.3.0",
        "@smithy/types": "4.6.0",
        "archiver": "7.0.1",
        "aws-crt": "1.27.3",
        "aws-lambda": "1.0.7",
        "bytes": "3.1.2",
        "ms": "2.1.3",
        "multer": "2.0.2",
        "multer-s3": "3.0.1",
        "p-limit": "7.1.1",
        "pathe": "2.0.3",
        "s3-readstream": "2.0.1",
        "stack-trace-logger": "^1.1.1"
    },
    "devDependencies": {
        "@types/archiver": "6.0.3",
        "@types/aws-lambda": "8.10.153",
        "@types/bytes": "3.1.5",
        "@types/express": "5.0.3",
        "@types/ms": "2.1.0",
        "@types/multer": "2.0.0",
        "@types/multer-s3": "3.0.3",
        "cross-env": "^10.1.0",
        "express": "^5.1.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.0",
        "tslint": "^6.1.3",
        "typescript": "^5.9.2"
    }
}
